{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom"],

    "isolatedModules": true,
    "jsxImportSource": "vue",
    "resolveJsonModule": true,
    "useDefineForClassFields": true
  },
  "files": ["./typings/index.d.ts"],
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./vite.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
